<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="cordova-plugin-firebase-native"
        version="1.0.0">

    <name>cordova-plugin-firebase-native</name>

    <engines>
        <engine name="cordova" version=">=3.4.0"/>
    </engines>

    <asset src="www/firebaseNative.js" target="js/firebaseNative.js"/>

    <js-module src="www/firebaseNative.js" name="firebaseNative">
        <merges target="cordova.plugins.firebase.native" />
    </js-module>

    <platform name="android">

        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="FirebaseNative">
                <param name="android-package" value="com.alexnu.plugin.FirebaseNativePlugin"/>
            </feature>
        </config-file>

        <dependency id="cordova-support-google-services" version="~1.2.0"/>

        <framework src="com.google.firebase:firebase-core:16.0.7" />
        <framework src="com.google.firebase:firebase-auth:16.1.0" />
        <framework src="com.google.firebase:firebase-database:16.1.0" />
        <framework src="com.google.code.gson:gson:2+"/>

        <source-file src="src/android/FirebaseNativePlugin.java" target-dir="src/com/alexnu/plugin/"/>
        <source-file src="src/android/AuthListener.java" target-dir="src/com/alexnu/plugin/"/>
    </platform>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="FirebaseNative">
                <param name="ios-package" value="FirebaseNativePlugin" />
            </feature>
        </config-file>

        <header-file src="src/ios/FirebaseNativePlugin.h" />
        <source-file src="src/ios/FirebaseNativePlugin.m" />

        <framework src="Firebase/Core" type="podspec" spec="~> 5.0"/>
        <framework src="Firebase/Auth" type="podspec" spec="~> 5.0"/>
        <framework src="Firebase/Database" type="podspec" spec="~> 5.0"/>
    </platform>

</plugin>
